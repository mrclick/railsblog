<%= form_for @contact do |f| %>
    <% if flash[:error].present? %>
        <p> flash[:error]</p>
    <% end %>
    <div class="form-group">    
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.label :name %> <br>
        <%= f.text_field :name, required: true, class: "form-control", placeholder: "Names" %>
      </div>
    </div>
    <div class="form-group">    
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.label :email %> <br>
        <%= f.text_field :email, required: true, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">    
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.label :message %> <br>
        <%= f.text_area :message, as: :text, class: "form-control", placeholder: "Message" %>
      </div>
    </div>
    <div class="form-group">    
      <div class="col-sm-offset-2 col-sm-10 pt-2">    
        <%= f.submit 'Send Message', class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>